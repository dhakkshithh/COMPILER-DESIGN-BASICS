#include <stdio.h>
#include <string.h>
#include <ctype.h>

char keywords[10][10] = {"int", "return", "if", "else", "while", "char", "float"};

int isKeyword(char *word) {
    for (int i = 0; i < 10; i++) {
        if (strcmp(word, keywords[i]) == 0)
            return 1;
    }
    return 0;
}

int main() {
    FILE *fp = fopen("input.txt", "r");
    char ch, buffer[20];
    int i = 0;

    if (fp == NULL) {
        printf("Error opening file.\n");
        return 1;
    }

    printf("Lexical Analysis:\n");
    while ((ch = fgetc(fp)) != EOF) {
        if (isalnum(ch)) {
            buffer[i++] = ch;
        } else {
            buffer[i] = '\0';
            i = 0;
            if (strlen(buffer) > 0) {
                if (isKeyword(buffer))
                    printf("Keyword: %s\n", buffer);
                else
                    printf("Identifier: %s\n", buffer);
            }
            if (ch == '+' || ch == '-' || ch == '*' || ch == '=' || ch == '/') {
                printf("Operator: %c\n", ch);
            }
        }
    }

    fclose(fp);
    return 0;
}
